@page "/reviews"
@rendermode InteractiveServer
@inject ReviewService ReviewService

<PageTitle>Відгуки</PageTitle>

<div class="py-1 ec-bg-soft">
    <div class="container py-5">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-white p-2 mb-4 rounded shadow-sm">
                <li class="breadcrumb-item">
                    <a href="/" class="bread-link">@SharedResource.TextOurReviews_1</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@SharedResource.TextOurReviews_2</li>
            </ol>
        </nav>
        <!-- Header -->
        <section class="py-4">
            <div class="row g-4 align-items-stretch">
                <div class="col-lg-7">
                    <span class="badge rounded-pill ec-badge-primary px-3 py-2 mb-3">English Club</span>

                    <h1 class="display-6 fw-bold mb-2">@SharedResource.TextOurReviews_3</h1>

                    <p class="text-muted fs-5 mb-0" style="max-width: 820px;">
                        @SharedResource.TextOurReviews_4 ❤️
                    </p>
                </div>

                <div class="col-lg-5">
                    <div class="p-4 bg-white rounded-4 shadow-sm border h-100">
                        <div class="d-flex align-items-start justify-content-between gap-3">
                            <div>
                                <div class="fw-bold">@SharedResource.TextOurReviews_5</div>
                                <div class="text-muted small">
                                    @if (isLoading)
                                    {
                                        <span> @SharedResource.TextOurReviews_6</span>
                                    }                                   
                                </div>
                            </div>
                            <div class="ec-stars text-warning" aria-label="@SharedResource.TextOurReviews_5">
                                @for (var i = 1; i <= 5; i++)
                                {
                                    <i class="bi @(i <= Math.Round(AvgRating, MidpointRounding.AwayFromZero) ? "bi-star-fill" : "bi-star")"></i>
                                }
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex gap-2 flex-wrap mb-3">
                            <span class="badge text-bg-light border">@SharedResource.TextOurReviews_7</span>
                            <span class="badge text-bg-light border">@SharedResource.TextOurReviews_8</span>
                            <span class="badge text-bg-light border">@SharedResource.TextOurReviews_9</span>
                            <span class="badge text-bg-light border">@SharedResource.TextOurReviews_10</span>
                        </div>

                        <div class="d-grid">
                            <a href="/add-review" class="btn ec-btn-primary">
                                <i class="bi bi-chat-heart me-1"></i>
                                @SharedResource.TextOurReviews_11
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Toolbar -->       
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-12">

                <div class="d-flex flex-wrap gap-2 align-items-end mb-3">
                    <div class="me-auto">
                          <h3 class="fw-bold m-0">@SharedResource.TextOurReviews_12</h3>
                                <div class="text-muted">@SharedResource.TextOurReviews_13</div>
                    </div>

                    <div class="ms-auto">
                        <input class="form-control form-control-sm"
                               style="min-width: 280px;"
                                       placeholder="@SharedResource.TextOurReviews_14"
                               @bind="query"
                               @bind:event="oninput" />
                    </div>
                </div>

                <div class="d-flex flex-column gap-3">
                    @if (isLoading)
                    {
                        <div class="p-4 bg-white rounded-4 shadow-sm border">
                                    <div class="text-muted">@SharedResource.TextOurReviews_15</div>
                        </div>
                    }
                    else if (!Filtered.Any())
                    {
                        <div class="p-4 bg-white rounded-4 shadow-sm border">
                                    <div class="fw-bold">@SharedResource.TextOurReviews_16</div>
                                    <div class="text-muted small mt-1">@SharedResource.TextOurReviews_17</div>
                        </div>
                    }
                    else
                    {
                        @foreach (var r in Paged)
                        {
                            <div class="p-4 bg-white rounded-4 shadow-sm border">
                                <div class="d-flex align-items-start justify-content-between gap-3">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="rounded-circle bg-light border d-flex align-items-center justify-content-center"
                                             style="width: 48px; height: 48px;">
                                            <span class="fw-bold text-primary">@GetInitial(r.ClientName)</span>
                                        </div>

                                        <div>
                                            <div class="fw-bold">@r.ClientName</div>
                                            <div class="text-muted small">@FormatDate(r.ReviewDate)</div>
                                        </div>
                                    </div>

                                            <div class="ec-stars" aria-label="@SharedResource.TextOurReviews_5">
                                                @for (var i = 1; i <= 5; i++)
                                                {
                                                    <i class="bi @(i <= (int)Math.Round(AvgRating, MidpointRounding.AwayFromZero)
                                                                       ? "bi-star-fill"
                                                                       : "bi-star")"></i>
                                            }
                                        </div>
                                </div>

                                <div class="mt-3 text-muted">
                                    “@r.Content”
                                </div>

                            </div>
                        }
                    }
                </div>

                <div class="d-flex align-items-center justify-content-between mt-3">
                            <small class="text-muted">@SharedResource.TextOurReviews_18 @ShownCount з @Filtered.Count()</small>

                    <div class="btn-group">
                        <button class="btn btn-outline-secondary btn-sm"
                                disabled="@(page <= 1)"
                                @onclick="Prev">
                            «
                        </button>

                        <span class="btn btn-outline-secondary btn-sm disabled">
                          @SharedResource.TextOurReviews_18 @@page / @TotalPages
                        </span>

                        <button class="btn btn-outline-secondary btn-sm"
                                disabled="@(page >= TotalPages)"
                                @onclick="Next">
                            »
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
      
    </div>
</div>

@code {
    [CascadingParameter] public MainLayout? Layout { get; set; }
    private bool isLoading = true;

    private List<Review> all = new();
    private string query = "";

    private int page = 1;
    private const int PageSize = 6;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;

        all = (await ReviewService.GetReviewAsync())
            .OrderByDescending(x => x.ReviewDate)
            .ToList();

        isLoading = false;
    }

    // --- Filtering ---
    private IEnumerable<Review> Filtered
    {
        get
        {
            var q = (query ?? "").Trim();
            if (string.IsNullOrWhiteSpace(q)) return all;

            return all.Where(r =>
                Contains(r.ClientName, q) ||
                Contains(r.Content, q) ||
                Contains(r.Rating.ToString(), q));
        }
    }
       
    private double AvgRating => all.Count > 0
        ? all.Average(r => ClampRating(r.Rating))
        : 0;

    // --- Paging ---
    private int TotalPages => Math.Max(1, (int)Math.Ceiling(Filtered.Count() / (double)PageSize));

    private IEnumerable<Review> Paged
    {
        get
        {
            page = Math.Clamp(page, 1, TotalPages);

            return Filtered
                .Skip((page - 1) * PageSize)
                .Take(PageSize);
        }
    }

    private int ShownCount => Paged.Count();

    private void Prev() => page = Math.Max(1, page - 1);
    private void Next() => page = Math.Min(TotalPages, page + 1);

    // --- Helpers ---
    private static bool Contains(string? source, string q) =>
        !string.IsNullOrWhiteSpace(source) &&
        source.Contains(q, StringComparison.OrdinalIgnoreCase);

    private static int ClampRating(int rating) => Math.Clamp(rating, 1, 5);

    private static string GetInitial(string? name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "•";
        var ch = name.Trim()[0];
        return char.ToUpperInvariant(ch).ToString();
    }

    private static string FormatDate(DateOnly d)
    {
        var dt = d.ToDateTime(TimeOnly.MinValue);
        return dt.ToString("dd.MM.yyyy", System.Globalization.CultureInfo.InvariantCulture);
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (!firstRender) return;

        Layout?.SetSeo(
            "Послуги — English Club W.O.W | Стрий та онлайн",
            "Групові та індивідуальні заняття з англійської для дітей і дорослих. Speaking Club, підготовка до іспитів, онлайн/офлайн навчання."
        );
    }
}
