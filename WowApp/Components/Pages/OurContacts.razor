@page "/contacts"
@inject TelegramBotService _telegramBotService
@inject AppointmentNotifier _notification
@rendermode InteractiveServer

<PageTitle>Our Contact</PageTitle>
<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white p-2 mb-4 rounded shadow-sm">
            <li class="breadcrumb-item">
                <a href="/" class="bread-link">Домашня сторінка</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Контакти</li>
        </ol>
    </nav>
</div>
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-lg-7">
                <span class="badge rounded-pill ec-badge-primary px-3 py-2 mb-3">
                    English Club
                </span>

                <h1 class="display-6 fw-bold mb-3">Наші контакти</h1>

                <p class="text-muted fs-5 mb-0" style="max-width: 820px;">
                    Напиши або подзвони — підкажемо формат навчання, визначимо рівень і допоможемо обрати групу.
                </p>
            </div>

            <div class="col-lg-5">
                <div class="p-4 bg-white rounded-4 shadow-sm border">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="fw-bold">Графік роботи</div>
                            <div class="text-muted small">Відповідаємо швидко 🙂</div>
                        </div>
                        <i class="bi bi-clock fs-3 text-primary"></i>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Пн–Пт</span>
                        <span class="fw-semibold">@WorkdaysHours</span>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <span class="text-muted">Сб</span>
                        <span class="fw-semibold">@SaturdayHours</span>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <span class="text-muted">Нд</span>
                        <span class="fw-semibold">@SundayHours</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 contact-commercial">
    <div class="container">
        <div class="row g-4 align-items-stretch">

            <!-- CONTACT INFO -->
            <div class="col-lg-5">
                <div class="contact-card h-100">
                    <h3 class="fw-bold mb-3">Звʼязатися з нами</h3>
                    <p class="text-muted mb-4">
                        Маєш питання або хочеш записати дитину на заняття?
                        Напиши нам — ми швидко підберемо формат і рівень.
                    </p>

                    <div class="contact-item">
                        <i class="bi bi-telephone"></i>
                        <div>
                            <div class="label">Телефон</div>
                            <a href="tel:@Phone">@Phone</a>
                        </div>
                    </div>

                    <div class="contact-item">
                        <i class="bi bi-envelope"></i>
                        <div>
                            <div class="label">Email</div>
                            <a href="mailto:@Email">@Email</a>
                        </div>
                    </div>

                    <div class="contact-item">
                        <i class="bi bi-geo-alt"></i>
                        <div>
                            <div class="label">Адреса</div>
                            <div>@Address</div>
                            @if (!string.IsNullOrWhiteSpace(MapUrl))
                            {
                                <a class="map-link" href="@MapUrl" target="_blank">Відкрити на карті →</a>
                            }
                        </div>
                    </div>

                    <div class="socials mt-4 d-flex flex-wrap justify-content-center gap-2 gap-md-3">
                        @if (!string.IsNullOrWhiteSpace(TelegramUrl))
                        {
                            <a href="@TelegramUrl"
                               target="_blank"
                               class="social-btn telegram ec-btn-outline-white">
                                <i class="bi bi-telegram"></i>
                                <span class="d-none d-sm-inline">Telegram</span>
                            </a>
                        }

                        @if (!string.IsNullOrWhiteSpace(InstagramUrl))
                        {
                            <a href="@InstagramUrl"
                               target="_blank"
                               class="social-btn instagram ec-btn-outline-white">
                                <i class="bi bi-instagram"></i>
                                <span class="d-none d-sm-inline">Instagram</span>
                            </a>
                        }

                        @if (!string.IsNullOrWhiteSpace(FacebookUrl))
                        {
                            <a href="@FacebookUrl"
                               target="_blank"
                               class="social-btn facebook ec-btn-outline-white">
                                <i class="bi bi-facebook"></i>
                                <span class="d-none d-sm-inline">Facebook</span>
                            </a>
                        }
                    </div>


                    <div class="contact-note mt-4">
                        💡 Підберемо групу за віком та рівнем — просто напиши “Хочу навчатися”
                    </div>
                </div>
            </div>

            <!-- FORM -->
            <div class="col-lg-7">
                <div class="contact-form h-100">
                    <h3 class="fw-bold mb-2">Залишити заявку</h3>
                    <p class="text-muted mb-4">
                        Заповни форму — ми звʼяжемось із тобою найближчим часом.
                    </p>

                    <EditForm Model="@_model" OnValidSubmit="SendAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <InputText class="form-control" @bind-Value="_model.ClientName" placeholder="Імʼя" />
                                    <label>Імʼя</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <InputText class="form-control" @bind-Value="_model.ClientPhone" placeholder="Телефон" />
                                    <label>Телефон</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <InputTextArea class="form-control"
                                                   @bind-Value="_model.Message"
                                                   placeholder="Повідомлення"
                                                   style="height: 140px;" />
                                    <label>Повідомлення</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="ec-actions">
                                    <button class="btn ec-btn-primary ec-btn-responsive"
                                            type="submit"
                                            disabled="@isSending">
                                        <i class="bi bi-send me-1"></i>
                                        @(isSending ? "Надсилаємо..." : "Надіслати заявку")
                                    </button>

                                    <button class="btn ec-btn-outline-white ec-btn-responsive"
                                            type="button"
                                            @onclick="Clear"
                                            disabled="@isSending">
                                        Очистити
                                    </button>
                                </div>
                            </div>

                        </div>
                    </EditForm>

                    @if (!string.IsNullOrWhiteSpace(success))
                    {
                        <div class="alert alert-success mt-4 mb-0">
                            <i class="bi bi-check-circle me-1"></i> @success
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</section>


@code {
    // --------- Контакти (підстав свої) ----------
    private string Phone = "+380 (98) 250 64 16";
    private string Email = "lyubovvynnytska87@gmail.com";
    private string Address = "м. Стрий, вул. Охримовича, 8/25";

    private string? MapUrl = "https://maps.app.goo.gl/cXJn8Ckc4NUtx4bo6";
    private string? TelegramUrl = null;
    private string? InstagramUrl = "https://www.instagram.com/englishclubwow?igsh=MWFsaTZhNDk3NzhybA%3D%3D&utm_source=qr";
    private string? FacebookUrl = "https://www.facebook.com/share/17nx3CXezu/?mibextid=wwXIfr";

    private string WorkdaysHours = "09:00 – 21:00";
    private string SaturdayHours = "09:00 – 15:00";
    private string SundayHours = "вихідний";

    // --------- Форма ----------
    private Appointment _model = new();
    private bool isSending;
    private string? success;   
    private string? _errText;

    private async Task SendAsync()
    {
        isSending = true;
        success = null;
       _errText = null;       

        try
        {
            var id = await _telegramBotService.SaveAppointmentClientAsync(_model);   
            _model.AppointmentDate = DateOnly.FromDateTime(DateTime.Now);
            _model.Group = "==> повідомлення відправлено із сторінки контакти.";
            await _notification.NotifyNewAppointmentAsync(_model);
        }
        catch (Exception ex)
        {
            _errText = "Сталася помилка при відправці. Спробуйте ще раз.";
            Console.WriteLine(ex);
        }
        finally
        {
            isSending = false;
        }
        await Task.Delay(600);

        success = "Дякуємо! Ми отримали ваше повідомлення і скоро з вами звʼяжемось.";
        isSending = false;
    }

    private void Clear()
    {
        _model = new();
        success = null;
    }     
}
