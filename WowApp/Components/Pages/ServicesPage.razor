@* --- PAGE: Послуги / Косметологія --- *@
<PageTitle>Service page</PageTitle>
<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white p-2 mb-4 rounded shadow-sm">
            <li class="breadcrumb-item">
                <a href="/" class="bread-link">Домашня сторінка</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Послуги</li>
        </ol>
    </nav>
</div>

<h3 style="padding-top: 1%;"></h3>
<!-- SECTION TITLE -->
<div class="section-title text-center mb-5">
    <h2 class="courses-title">Наші послуги.</h2>
    <p class="courses-desc">
        @*  Практичні курси та заняття, які допоможуть тобі впевнено використовувати англійську в житті та роботі. *@
    </p>

</div>
<section class="services-hero py-4 py-lg-5">
    <div class="container">
        <div class="services-hero__box">
            <div>
                <span class="badge rounded-pill ec-badge-primary px-3 py-2 mb-3">Послуги</span>
                <h1 class="services-title">Вивчення англійської мови</h1>
                <p class="services-subtitle">
                    Вивчай англійську через практику, спілкування та цікаві завдання.
                    Підберемо формат навчання під твій рівень і цілі.
                </p>
            </div>

           
        </div>
    </div>
</section>


<!-- SERVICES GRID -->
<section class="pt-3 pb-5" id="servicesList">
    <div class="container">

        <div class="section-head text-center mb-4">
            <h2 class="section-title">Типи занять</h2>
            <p class="section-desc">
                Оберіть для себе тип заняття — ми уточнимо деталі та зручний час.
            </p>
        </div>

        <figure class="figure m-0">
            <div class="row g-3">                              

                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card service-card h-100 shadow-sm">

                        <div class="service-media">
                            <img src="/images/home-children2.jpg"
                                 class="card-img-top"
                                 alt="TitleCard"
                                 loading="lazy"
                                 decoding="async">

                            <span class="service-badge">ТОП</span>

                            <a href="/contact" class="service-fav" title="Додати в обране">
                                <i class="bi bi-heart"></i>
                            </a>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold service-title text-center">
                                Групові заняття діти
                            </h5>
                                                      
                            <p class="card-text">Місячний абонемент 8/9 занять без відрахувань пропусків; оплата до 10 числа поточного місяця</p>
                            <div class="card-footer bg-transparent border-0 text-center mt-auto">
                                <i class="bi bi-cash-stack me-1">1200</i>
                                @* @item.Price.ToString("C0", new System.Globalization.CultureInfo("uk-UA")) *@
                            </div>

                            <div class="service-mini">
                                <span><i class="bi bi-clock me-1"></i> 55 хв</span>
                                <span><i class="bi bi-shield-check me-1"></i> Дитяча група</span>
                                <span><i class="bi bi-stars me-1"></i> 8-12 років</span>
                            </div>
                        </div>

                    </div>
                </div>                               

            </div>
        </figure>
    </div>
</section>

<!-- CTA -->
