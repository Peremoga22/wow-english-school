@page "/admin-home"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@inject ApplicationDbContext Db
@inject NavigationManager Nav
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]
@rendermode InteractiveServer

<PageTitle>Admin Home</PageTitle>

<div class="container my-4">

    <!-- Top bar -->
    <div class="d-flex flex-column flex-lg-row align-items-lg-end justify-content-between gap-3 mb-4">
        <div>
            <h3 class="fw-bold mb-1">Наповнення сторінки — Домашня</h3>
            <p class="text-muted mb-0 small">
                Керування титульним блоком, фото та текстами (UA/EN)
            </p>
        </div>

        <div class="d-flex gap-2 flex-wrap align-items-center">
            <!-- Culture switch -->
            <div class="btn-group" role="group" aria-label="Culture switch">
                <button type="button"
                        class="btn btn-outline-secondary rounded-pill px-3 @(selectedCulture == Culture.Ua ? "active" : "")"
                        @onclick="() => selectedCulture = Culture.Ua">
                    🇺🇦 UA
                </button>
                <button type="button"
                        class="btn btn-outline-secondary rounded-pill px-3 @(selectedCulture == Culture.En ? "active" : "")"
                        @onclick="() => selectedCulture = Culture.En">
                    🇬🇧 EN
                </button>
            </div>

            <!-- Add -->
            <NavLink class="btn ec-btn-primary rounded-pill px-4"
                     href="@AddHref">
                <i class="bi bi-plus-lg me-1"></i>
                Додати
                <span class="opacity-75 ms-1">(@(selectedCulture == Culture.En ? "EN" : "UA"))</span>
            </NavLink>
        </div>
    </div>

    <!-- Panel -->
    <section class="ec-panel">
        <header class="ec-panel__head">
            <div>
                <h1 class="ec-title mb-1">Домашня сторінка — записи</h1>
                <p class="ec-subtitle mb-0">Список блоків контенту (можна редагувати / видаляти)</p>
            </div>
        </header>

        <div class="ec-divider"></div>

        @if (loading)
        {
            <div class="text-muted py-3">Завантаження...</div>
        }
        else if (filtered.Count == 0)
        {
            <div class="text-muted py-3">Немає записів для @(selectedCulture == Culture.En ? "EN" : "UA")</div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var item in filtered)
                {
                    <div class="col-12 col-md-6 col-xl-4">
                        <article class="border rounded-4 bg-white shadow-sm p-3 h-100 d-flex flex-column">
                            <div class="d-flex align-items-start justify-content-between gap-2 mb-2">
                                <span class="badge rounded-pill @(item.IsCulture ? "text-bg-primary" : "text-bg-secondary")">
                                    @(item.IsCulture ? "EN" : "UA")
                                </span>

                                <div class="text-muted small">
                                    @item.UpdatedAtUtc.ToString("dd.MM.yyyy")
                                </div>
                            </div>

                            <div class="mb-2">
                                <div class="fw-semibold text-truncate">@item.PhotoTitle</div>
                                <div class="text-muted small" style="display:-webkit-box;-webkit-line-clamp:3;-webkit-box-orient:vertical;overflow:hidden;">
                                    @item.PhotoText
                                </div>
                            </div>

                            @if (!string.IsNullOrWhiteSpace(item.ChristmasTitle) || !string.IsNullOrWhiteSpace(item.ChristmasText))
                            {
                                <div class="mt-2 p-2 rounded-3 bg-light">
                                    <div class="small fw-semibold">🎄 @item.ChristmasTitle</div>
                                    @if (!string.IsNullOrWhiteSpace(item.ChristmasText))
                                    {
                                        <div class="text-muted small" style="display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;overflow:hidden;">
                                            @item.ChristmasText
                                        </div>
                                    }
                                </div>
                            }

                            <div class="mt-auto pt-3 d-flex gap-2 flex-wrap">
                                <NavLink class="btn btn-outline-primary btn-sm rounded-pill px-3"
                                         href="@($"/edit-admin-home/{item.Id}")">
                                    <i class="bi bi-pencil me-1"></i> Редагувати
                                </NavLink>

                                <button type="button"
                                        class="btn btn-outline-danger btn-sm rounded-pill px-3 d-inline-flex align-items-center gap-1"
                                        disabled="@deleting.Contains(item.Id)"
                                        @onclick="() => ConfirmAndDeleteAsync(item)">
                                    <i class="fa-solid fa-trash" aria-hidden="true"></i>
                                    <span>@(deleting.Contains(item.Id) ? "Видаляю..." : "Видалити")</span>
                                </button>
                            </div>
                        </article>
                    </div>
                }
            </div>
        }
    </section>
</div>

@code {
    private enum Culture { Ua, En }

    private bool loading = true;
    private readonly HashSet<int> deleting = new();

    private List<HomeSection> rows = new();
    private List<HomeSection> filtered = new();

    private Culture selectedCulture = Culture.Ua;

    private string AddHref =>
        selectedCulture == Culture.En ? "/edit-admin-home?culture=en" : "/edit-admin-home?culture=uk";

    protected override async Task OnInitializedAsync()
    {
        loading = true;

        rows = await Db.HomeSections
            .AsNoTracking()
            .OrderByDescending(x => x.UpdatedAtUtc)
            .ToListAsync();

        ApplyFilter();
        loading = false;
    }

    protected override void OnAfterRender(bool firstRender)
    {
        // нічого
    }

    private void ApplyFilter()
    {
        var isEn = selectedCulture == Culture.En;
        filtered = rows.Where(x => x.IsCulture == isEn).ToList();
        StateHasChanged();
    }

    private Culture _lastCulture;
    protected override void OnParametersSet()
    {
        // якщо перемкнули культуру — оновити список
        if (_lastCulture != selectedCulture)
        {
            _lastCulture = selectedCulture;
            ApplyFilter();
        }
    }

    private async Task ConfirmAndDeleteAsync(HomeSection row)
    {
        if (row is null) return;

        deleting.Add(row.Id);
        try
        {
            var entity = await Db.HomeSections.FirstOrDefaultAsync(x => x.Id == row.Id);
            if (entity is null) return;

            Db.HomeSections.Remove(entity);
            await Db.SaveChangesAsync();

            rows.RemoveAll(x => x.Id == row.Id);
            ApplyFilter();
        }
        finally
        {
            deleting.Remove(row.Id);
        }
    }
}
