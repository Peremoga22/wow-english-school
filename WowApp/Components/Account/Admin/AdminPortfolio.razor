@page "/admin-portfolio"

@inject NavigationManager _navigationManager
@inject PortfolioService _portfolioService
@inject IJSRuntime _js
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]
@rendermode InteractiveServer

<div class="container my-4">
    <!-- Page title -->
    <div class="mb-4">
        <h3 class="fw-bold text-primary mb-1">
            Наповнення сторінки портфоліо
        </h3>
        <p class="text-muted mb-0 small">
            Керування титульним блоком та візуальним наповненням
        </p>
    </div>

    <!-- Breadcrumb + actions -->
    <nav aria-label="breadcrumb"
         class="bg-white shadow-sm rounded-4 px-3 px-md-4 py-3 mb-4">

        <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">

            <!-- Breadcrumb -->
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <i class="bi bi-house-door me-1"></i>
                    Адмін-панель
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    Портфоліо
                </li>
            </ol>

            <!-- Action -->
            <NavLink href="/edit-admin-portfolio"
                     class="btn ec-btn-primary px-4 py-2">
                <i class="bi bi-plus-lg"></i>
                <span class="d-none d-sm-inline">Додати титулку</span>
            </NavLink>

        </div>
    </nav>

    <!-- Section title -->
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h4 class="fw-semibold mb-0">
            Титульний блок сторінки портфоліо
        </h4>
    </div>

    <section class="pt-3">
        <figure class="m-0">
            <div class="row g-3">

                @if (portfolioList != null && portfolioList.Count > 0)
                {
                    @foreach (var item in portfolioList)
                    {
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="course-card h-100 d-flex flex-column">

                                @if (!string.IsNullOrWhiteSpace(item.VideoPath))
                                {
                                    <div class="course-card__media">
                                        <div class="ratio ratio-16x9">
                                            <lite-youtube class="card-img-top object-fit-cover"
                                                          videoid="@item.VideoPath"
                                                          title="@item.TitleCard">
                                            </lite-youtube>
                                        </div>

                                        <span class="course-category">@item.Group</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="course-card__img position-relative">
                                        <img src="@item.ImgPath"
                                             alt="@item.TitleCard"
                                             loading="lazy"
                                             class="w-70 d-block">
                                        <span class="course-category">@item.Group</span>
                                    </div>
                                }

                                <div class="course-card__body flex-grow-1">
                                    <h3 class="course-card__title">@item.TitleCard</h3>
                                    <p class="course-card__text">
                                        @item.DescriptionCard
                                    </p>

                                    <div class="course-card__footer">
                                        <div class="trainer">
                                            <img src="@item.ImgTeacherPath"
                                                 alt="Викладач"
                                                 loading="lazy">
                                            <span>Любов Романівна</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- actions bottom -->
                                <div class="px-3 pb-3 mt-auto d-flex justify-content-end">
                                    <NavLink class="btn ec-btn-primary px-4 py-2"
                                             href="@($"/edit-admin-portfolio/{item.Id}")">
                                        <i class="bi bi-pencil-square"></i>
                                        <span class="d-none d-sm-inline ms-1">Редагувати</span>
                                    </NavLink>                                
                                </div>

                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-light border rounded-4 mb-0">
                            На даний момент немає карт. Додайте!
                        </div>
                    </div>
                }

            </div>
        </figure>
    </section>


</div>


@code {
    private List<Portfolio>? portfolioList = new();
    private bool IsVideo = false;

    protected override async Task OnInitializedAsync()
    {
        portfolioList = await _portfolioService.GetPortfoliosAsync();
    }

    
}
